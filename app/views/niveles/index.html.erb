<h1>Lista de Niveles</h1>

<table>
  <tr>
    <th class="ui-state-default">Nombre</th>
  </tr>

<% @niveles.each do |nivel| %>
  <tr>
    <td><%=h nivel.nombre %></td>
    <td><%= link_to 'Ver', nivel_path(nivel, :page => @page) %></td>
    <td><%= link_to 'Editar', edit_nivel_path(nivel, :page => @page) %></td>
    <td><%= link_to 'Eliminar', nivel, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Nivel', new_nivel_path %>
<%= will_paginate @niveles %>