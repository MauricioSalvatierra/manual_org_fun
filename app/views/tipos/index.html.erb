<h1>Lista de Tipos</h1>

<table>
  <tr>
    <th class="ui-state-default">Nombre</th>
  </tr>

<% @tipos.each do |tipo| %>
  <tr>
    <td><%=h tipo.nombre %></td>
    <td><%= link_to 'Ver', tipo_path(tipo, :page => @page) %></td>
    <td><%= link_to 'Editar', edit_tipo_path(tipo,:page => @page) %></td>
    <td><%= link_to 'Eliminar', tipo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Tipo', new_tipo_path %>
<%= will_paginate @tipos %>